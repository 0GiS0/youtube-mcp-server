{
  "mcp": {
    "inputs": [
      {
        "type": "promptString",
        "id": "youtube_api_key",
        "description": "YouTube API Key",
        "password": true
      },
      {
        "id": "ado_org",
        "type": "promptString",
        "description": "Azure DevOps organization name (e.g. 'contoso')",
        "password": false
      }
    ],
    "servers": {
      "remote-mcp": {
        "type": "sse",
        "url": "http://localhost:3001/sse"
      },
      //   "azure-devops": {
      //     "gallery": true,
      //     "command": "npx",
      //     "args": ["-y", "@azure-devops/mcp", "${input:ado_org}"]
      //   },
      "stdio-mcp": {
        "type": "stdio",
        "command": "node",
        "args": [
          "/Users/gis/Desktop/Dev/mcp-github-copilot/mcp-stdio/build/index.js"
        ],
        "env": {
          "YOUTUBE_API_KEY": "${input:youtube_api_key}"
        }
      }
    }
  },
  "chat.mcp.discovery.enabled": true
}
