{
    "mcp": {
        "inputs": [
            {
                "type": "promptString",
                "id": "youtube_api_key",
                "description": "YouTube API Key",
                "password": true
            }
        ],
        "servers": {
            "remote-mcp": {
                "type": "sse",
                "url": "http://localhost:3001/sse"               
            },
            "stdio-mcp": {
                "type": "stdio",
                "command": "node",
                "args": [
                    "/Users/gis/Desktop/Dev/mcp-github-copilot/mcp-stdio/build/index.js"
                ],
                "env": {
                    "YOUTUBE_API_KEY": "${input:youtube_api_key}"
                }
            },          
        }
    },
    "chat.mcp.discovery.enabled": true
}