{
  "inputs": [
    {
      "type": "promptString",
      "id": "youtube_api_key",
      "description": "YouTube API Key",
      "password": true
    }   
  ],
  "servers": {
    "remote-mcp": {
      "type": "http",
      "url": "http://localhost:3001/mcp",
      "dev": {
        "watch": "mcp-remote/dist/src/**/*.js",
        "debug": { "type": "node" }
      }
    },
    "stdio-mcp": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/Users/gis/Desktop/Dev/mcp-github-copilot/mcp-stdio/build/index.js"
      ],
      "env": {
        "YOUTUBE_API_KEY": "${input:youtube_api_key}"
      },
      "dev": {
        "watch": "mcp-stdio/dist/src/**/*.js",
        "debug": { "type": "node" }
      }
    }
  }
}
